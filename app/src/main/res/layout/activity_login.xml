<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#FBF6C7">

    <TextView
        android:id="@+id/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_extra_bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_icon"
        app:layout_constraintStart_toEndOf="@+id/TitleText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/logo_image"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"/>


    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:layout_constraintTop_toBottomOf="@id/TitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logo"/>


    <EditText
        android:id="@+id/editEmail"
        android:layout_width="350dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/logo_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Enter E-mail"/>

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="350dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/editEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Enter Password"/>

    <TextView
        android:id="@+id/search_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot E-mail?"
        app:layout_constraintTop_toBottomOf="@+id/editPassword"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="55dp"/>


    <Button
        android:id="@+id/login_button"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:backgroundTint="#F2796B"
        android:text="LOGIN"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/search_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/create_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Donâ€™t have an account?"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_constraintBottom_toTopOf="@+id/naver_login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/create_account"/>

    <TextView
        android:id="@+id/create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_constraintBottom_toTopOf="@+id/naver_login_button"
        app:layout_constraintStart_toEndOf="@id/create_account_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/naver_login_button"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:backgroundTint="#5FC43A"
        android:text="LOGIN WITH NAVER"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/create_account_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableStart="@drawable/naver_logo"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/kakao_login_button"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:backgroundTint="#FEE500"
        android:text="LOGIN WITH KAKAO"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/naver_login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableStart="@drawable/kakao_logo"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/google_login_button"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:backgroundTint="#FFFFFF"
        android:text="LOGIN WITH GOOGLE"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/kakao_login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableStart="@drawable/google_logo"
        android:layout_marginBottom="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>